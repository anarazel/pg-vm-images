            "source_image_family": "debian-11",
            "source_image_project_id": "debian-cloud",
            "image_name": "{{user `prefix`}}pg-aio-sid-newkernel-uring-{{user `image_date`}}",
            "image_family": "{{user `prefix`}}pg-aio-sid-newkernel-uring",
            "ssh_username": "packer",
